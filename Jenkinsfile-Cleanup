pipeline {
    agent { label 'agent-main' }

    environment {
        K8S_NAMESPACE = "petclinic"
    }

    parameters {
        booleanParam(name: 'DELETE_NAMESPACE', defaultValue: false, description: 'Xóa luôn namespace?')
    }

    stages {
        stage('Xóa Deployment, Service, ConfigMap') {
            steps {
                script {
                    def services = [
                        "admin-server",
                        "api-gateway",
                        "config-server",
                        "customers",
                        "discovery-server",
                        "genai",
                        "vets",
                        "visits"
                    ]

                    for (svc in services) {
                        def fullname = "${svc}-deployment"
                        sh """
                            kubectl delete deployment ${fullname} -n ${K8S_NAMESPACE} --ignore-not-found=true
                            kubectl delete service ${fullname} -n ${K8S_NAMESPACE} --ignore-not-found=true
                            kubectl delete configmap ${svc}-config -n ${K8S_NAMESPACE} --ignore-not-found=true
                        """
                    }
                }
            }
        }

        stage('Xóa Ingress') {
            steps {
                sh "kubectl delete ingress petclinic-ingress -n ${K8S_NAMESPACE} --ignore-not-found=true"
            }
        }

        stage('Xóa Namespace (nếu chọn)') {
            when {
                expression { return params.DELETE_NAMESPACE }
            }
            steps {
                script {
                    def nsExists = sh(script: "kubectl get ns ${K8S_NAMESPACE}", returnStatus: true) == 0
                    if (nsExists) {
                        sh "kubectl delete namespace ${K8S_NAMESPACE} --ignore-not-found=true"
                    } else {
                        echo "⚠️ Namespace '${K8S_NAMESPACE}' không tồn tại."
                    }
                }
            }
        }
    }

    post {
        always {
            echo "✅ Cleanup hoàn tất!"
        }
    }
}
