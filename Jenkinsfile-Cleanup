pipeline {
    agent { label 'agent-main' }

    options {
        buildDiscarder(logRotator(numToKeepStr: '5'))
    }
    environment {
        K8S_NAMESPACE = "petclinic"
    }

    stages {
        stage('Xóa bằng Helm') {
            steps {
                script {
                    for (release in helmReleases) {
                        sh """
                            helm uninstall ${K8S_NAMESPACE} || echo "⚠️ Namespace ${K8S_NAMESPACE} không tồn tại."
                        """
                    }
                }
            }
        }
    }

    post {
        always {
            echo "✅ Cleanup hoàn tất!"
        }
    }
}
