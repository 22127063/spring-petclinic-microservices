pipeline {
    agent { label 'agent-main' }

    options {
        buildDiscarder(logRotator(numToKeepStr: '5'))
    }
    environment {
        K8S_NAMESPACE = "petclinic"
    }

    stages {
        stage('Xóa bằng Helm') {
            steps {
                script {
                    def helmReleases = [
                        "admin-server",
                        "api-gateway",
                        "config-server",
                        "customers",
                        "discovery-server",
                        "genai",
                        "vets",
                        "visits"
                    ]

                    for (release in helmReleases) {
                        sh """
                            helm uninstall ${release} -n ${K8S_NAMESPACE} || echo "⚠️ Release '${release}' không tồn tại."
                        """
                    }
                }
            }
        }
    }

    post {
        always {
            echo "✅ Cleanup hoàn tất!"
        }
    }
}
